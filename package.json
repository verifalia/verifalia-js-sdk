        "rollup-plugin-sourcemaps": "^0.6.3",
        "rollup-plugin-terser": "^5.1.1",
        "rollup-plugin-typescript2": "^0.26.0",
        "rollup-plugin-uglify": "^6.0.2",
        "ts-loader": "^6.0.4",
