        "@rollup/plugin-json": "^4.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@rollup/plugin-replace": "^2.3.1",
        "@types/debug": "^4.1.5",
        "@types/node": "^13.7.4",
        "@types/node-fetch": "^2.5.7",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "cross-env": "^7.0.0",
        "dts-bundle-generator": "^3.2.0",
        "eslint": "^7.13.0",
